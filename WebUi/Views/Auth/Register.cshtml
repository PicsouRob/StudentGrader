@model Application.DTOs.RegisterDto;

<main className="flex min-h-svh items-center justify-center px-4">
    <div class="bg-gray-100 flex items-center justify-center min-h-screen">
        <div class="w-full max-w-md">
            <div class="bg-white p-6 rounded-lg shadow-md border">
                <div class="border-b pb-4 space-y-2">
                    <h2 class="text-lg font-bold">Crear Cuenta</h2>

                    <p class="text-xs md:text-sm text-gray-500">
                        Bienvenido!, Ingrese tus iniciales para crear tu cuenta
                    </p>
                </div>

                <div class="pt-3">
                    <form action="/auth/register" method="post" class="space-y-4">
                        <div class="space-y-3">
                            <label asp-for="Name" for="name" class="block text-sm font-medium text-gray-700">Nombre y Apellido</label>

                            <input asp-for="Name" type="text" id="name" name="name" placeholder="John Doe" class="mt-1 block border text-sm place-holder:text-sm rounded px-2 py-2.5 w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />

                            <span asp-validation-for="Name" class="text-sm text-red-600 mt-1"></span>
                        </div>

                        <div class="space-y-3">
                            <label asp-for="Email" for="email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>

                            <input asp-for="Email" type="email" id="email" name="email" placeholder="ex: johndoe@gmail.com" class="mt-1 block border text-sm place-holder:text-sm rounded px-2 py-2.5 w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />

                            <span asp-validation-for="Email" class="text-sm text-red-600 mt-1"></span>
                        </div>

                        <div class="space-y-3">
                            <div class="flex items-center">
                                <label asp-for="Password" for="password" class="block text-sm font-medium text-gray-700">Contraseña</label>
                                @*<a href="/forgot-password" class="ml-auto inline-block text-sm text-indigo-600 hover:underline">¿Olvidaste tu contraseña?</a>*@
                            </div>

                            <input asp-for="Password" type="password" id="password" name="password" placeholder="********" class="mt-1 border rounded place-holder:text-sm px-2 py-2.5 block text-sm w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" autocomplete="current-password" />

                            <span asp-validation-for="Password" class="text-sm text-red-600 mt-1"></span>
                        </div>

                        <div class="text-sm text-red-600" role="alert">
                            @if (!string.IsNullOrEmpty(ViewData["AuthError"] as string))
                            {
                                @ViewData["AuthError"]
                            }
                        </div>

                        <button type="submit"
                                class="w-full bg-orange-600 text-white p-2 rounded transition duration-200 ease-in-out hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Crear Cuenta
                        </button>
                    </form>
                </div>

                <div class="border-t pt-4 text-center">
                    <p class="text-xs text-gray-500">
                        ¿Ya tienes una cuenta?
                        <a asp-area="" asp-controller="Auth"
                           asp-action="Login"
                           class="text-indigo-600 hover:underline">
                            Iniciar Sesión
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>
