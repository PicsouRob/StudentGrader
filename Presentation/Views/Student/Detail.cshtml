@model Domain.Entities.Student;

<div class="py-6">
    <a asp-controller="Student" asp-action="Index" aria-expanded="false" data-dropdown-toggle="dropdown-user"
        class="flex items-center text-sm rounded gap-x-2 min-w-min">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
            class="lucide lucide-arrow-left-icon lucide-arrow-left">
            <path d="m12 19-7-7 7-7" />
            <path d="M19 12H5" />
        </svg>

        Volver atras
    </a>
</div>

<div class="max-w-lg p-5 space-y-4 bg-white rounded-md">
    <h1 class="text-2xl font-bold">Informaci√≥n del estudiante</h1>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Nombre</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Name)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Correo electronico</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Email)
            </p>
        </div>
    </div>
    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Estado</p>

            <p class="text-sm text-gray-500">
                @if(Model.Status == "Active")
                {
                    <span class="px-2 py-1 text-xs text-green-600 rounded bg-green-50">Activo</span>
                }
                else if (Model.Status == "Graduated")
                {   
                    <span class="px-2 py-1 text-xs text-yellow-600 rounded bg-yellow-50">Graduado</span>
                }
                else
                {
                    <span class="px-2 py-1 text-xs text-red-600 rounded bg-red-50">Suspendido</span>
                }
            </p>
        </div>
    </div>
    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Matricula</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.StudentId)
            </p>
        </div>
    </div>
    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Telefono</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.PhoneNumber)
            </p>
        </div>
    </div>
    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Fecha de ingreso</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.EnrollmentDate)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Fecha agregado</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.CreatedAt)
            </p>
        </div>
    </div>
</div>

