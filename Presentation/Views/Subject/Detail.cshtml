@model Domain.Entities.Subject;

<div class="py-6">
    <a asp-controller="Subject" asp-action="Index" aria-expanded="false" data-dropdown-toggle="dropdown-user"
        class="flex items-center text-sm rounded gap-x-2 min-w-min">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
            class="lucide lucide-arrow-left-icon lucide-arrow-left">
            <path d="m12 19-7-7 7-7" />
            <path d="M19 12H5" />
        </svg>

        Volver atras
    </a>
</div>

<div class="max-w-lg p-5 space-y-4 bg-white rounded-md">
    <h1 class="text-2xl font-bold">Información de la materia</h1>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Nombre</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Name)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Descripción</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Description)
            </p>
        </div>
    </div>
    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Codigo</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Code)
            </p>
        </div>
    </div>
    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Creditos</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Credits)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Fecha agregado</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.CreatedAt)
            </p>
        </div>
    </div>
</div>

