@model Domain.Entities.Grade;

<div class="py-6">
    <a asp-controller="Grade" asp-action="Index" aria-expanded="false" data-dropdown-toggle="dropdown-user"
        class="flex items-center text-sm rounded gap-x-2 min-w-min">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
            class="lucide lucide-arrow-left-icon lucide-arrow-left">
            <path d="m12 19-7-7 7-7" />
            <path d="M19 12H5" />
        </svg>

        Volver atras
    </a>
</div>

<div class="max-w-lg p-5 space-y-4 bg-white rounded-md">
    <h1 class="text-2xl font-bold">Información del estudiante</h1>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Estudiante</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Student!.Name)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Asignatura</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Subject!.Name)
            </p>
        </div>
    </div>
    
    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Calificación 1</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Grade1)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Calificación 2</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Grade2)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Calificación 3</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Grade3)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Calificación 4</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Grade4)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Examen</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Exam)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Calificación Total</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.TotalGrade)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Clasificación</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.Classification)
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Estado</p>

            <p class="text-sm text-gray-500">
                @if(Model.State == "approved")
                {
                    <span>Aprobado</span>
                }
                else
                {
                    <span>Reprobado</span>
                }
            </p>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-2 gap-1">
            <p class="text-sm text-gray-500">Fecha agregado</p>

            <p class="text-sm text-gray-500">
                @Html.DisplayFor(modelItem => modelItem.CreatedAt)
            </p>
        </div>
    </div>
</div>

